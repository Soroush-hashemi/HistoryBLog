@model TestBlog.Web.Areas.Admin.Models.Categories.CreateCategoryViewModel
@{
    ViewData["title"] = "افزودن دسته بندی";
    ViewData["selected"] = "category";

}
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a asp-area="Admin" asp-controller="Category" asp-action="Index">دسته بندی ها</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">
    <form class="box box-danger" method="post" asp-area="Admin" asp-controller="Category" asp-action="Add">
        <input type="hidden" asp-for="ParentId" />
        <div class="box-body row">
            <div class="col-md-6">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Slug"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="MetaTag"></label>
                <input asp-for="MetaTag" class="form-control" />
                @*<span asp-validation-for="MetaTag" class="text-danger"></span>*@
            </div>
            <div class="col-md-6">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" class="form-control" />
                @*<span asp-validation-for="MetaDescription" class="text-danger"></span>*@
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
        </div>
    </form>
</section>