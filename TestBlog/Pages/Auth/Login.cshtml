@page
@model TestBlog.Web.Pages.Auth.LoginModel
@{
    Layout = "../Shared/Header/_LoginLayout";
    ViewData["Title"] = "ورود ";
}

<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری"  asp-for="UserName" />
        <span asp-validation-for="UserName" style="color: red"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" asp-for="Password" />
        <span asp-validation-for="Password" style="color: red"></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a asp-page="Signin">ثبت نام</a>
    </div>
</form>